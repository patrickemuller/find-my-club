<% content_for :title, @club.name %>

<div class="w-full">
  <!-- Hero banner with blurred background and overlay -->
  <section class="relative overflow-hidden rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-gray-900">
    <div class="absolute inset-0">
      <img alt="" src="https://picsum.photos/seed/<%= @club.slug %>-hero/1600/500" class="h-full w-full object-cover blur-sm" />
      <div class="absolute inset-0 bg-white/70 dark:bg-gray-900/70"></div>
    </div>

    <div class="relative grid grid-cols-4 mx-auto px-6 py-10 sm:py-14 lg:px-8">
      <div class="items-center col-span-4 mb-4 sm:col-span-3 sm:mb-0">
        <!-- Left: Name + badges -->
          <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl"><%= @club.name %></h1>
          <div class="mt-3 flex flex-wrap items-center gap-2 text-xs">
            <span class="inline-flex items-center rounded-full border border-gray-300 bg-white/80 px-2 py-0.5 text-gray-800 shadow-sm dark:border-gray-600 dark:bg-gray-800/60 dark:text-gray-100"><%= @club.formatted_category %></span>
            <span class="inline-flex items-center rounded-full border border-gray-300 bg-white/80 px-2 py-0.5 text-gray-800 shadow-sm dark:border-gray-600 dark:bg-gray-800/60 dark:text-gray-100"><%= @club.formatted_level %></span>
            <span class="inline-flex items-center rounded-full border border-gray-300 bg-white/80 px-2 py-0.5 text-gray-800 shadow-sm dark:border-gray-600 dark:bg-gray-800/60 dark:text-gray-100"><%= @club.members_count %> <%= 'member'.pluralize(@club.members_count) %></span>
          </div>
        <!-- Right: Join button -->
      </div>

      <div class="items-center flex col-span-4 sm:col-span-1 md:justify-end text-center">
        <% if current_user && current_user == @club.owner %>
          <%= link_to "Update my Club", edit_club_path(@club), class: "inline-flex items-center rounded-md bg-amber-600 px-6 py-2 text-lg font-semibold text-white shadow hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2" %>
        <% elsif current_user %>
          <% membership = current_user.memberships.find_by(club_id: @club.id) %>
          <% if membership&.active? %>
            <%= button_to "Leave", club_membership_path(@club), method: :delete,
                data: { turbo_confirm: "Are you sure you want to leave #{@club.name}?" },
                class: "inline-flex items-center rounded-md bg-red-600 px-6 py-2.5 text-lg font-semibold text-white shadow hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
          <% elsif membership&.pending? %>
            <span class="inline-flex items-center rounded-md bg-yellow-600 px-6 py-2.5 text-lg font-semibold text-white shadow cursor-not-allowed">
              Pending Approval
            </span>
          <% elsif membership&.disabled? %>
            <span class="inline-flex items-center rounded-md bg-gray-600 px-6 py-2.5 text-lg font-semibold text-white shadow cursor-not-allowed">
              Membership Disabled
            </span>
          <% else %>
            <%= button_to "#{@club.private? ? 'Ask to Join' : 'Join'}", club_membership_path(@club), method: :post,
                class: "inline-flex items-center rounded-md bg-orange-600 px-6 py-2.5 text-lg font-semibold text-white shadow hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" %>
          <% end %>
        <% else %>
          <%= link_to "Sign in to Join", new_user_session_path, class: "inline-flex items-center rounded-md bg-orange-600 px-6 py-2.5 text-lg font-semibold text-white shadow hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Content sections without rounded/bordered containers -->
  <div class="mx-auto mt-8">
    <!-- Description (no title) -->
    <section class="my-4">
      <h2 class="text-2xl font-bold tracking-tight">Description</h2>
      <div class="prose prose-sm max-w-none text-gray-700 dark:prose-invert dark:text-gray-300 mt-3">
        <%= @club.description %>
      </div>
    </section>

    <!-- Rules (with title) -->
    <section class="my-4">
      <h2 class="text-2xl font-bold tracking-tight">Rules</h2>
      <div class="prose prose-sm max-w-none text-gray-700 dark:prose-invert dark:text-gray-300 mt-3">
        <%= @club.rules %>
      </div>
    </section>

    <!-- Events -->
    <% if current_user && (@club.has_member?(current_user) || @club.is_owner?(current_user)) %>
      <section class="my-4">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold tracking-tight">Upcoming Events</h2>
          <div class="flex gap-2">
            <%= link_to "View All Events", club_events_path(@club), class: "text-orange-600 hover:underline text-sm font-medium" %>
          </div>
        </div>

        <% if @upcoming_events.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
            <% @upcoming_events.each do |event| %>
              <%= render "events/event_card", event: event %>
            <% end %>
          </div>
        <% else %>
          <div class="rounded-xl border border-gray-200 bg-gray-50 dark:border-gray-700 dark:bg-gray-800 p-8 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No upcoming events</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              <% if @club.is_owner?(current_user) %>
                Get started by creating a new event for your club members.
              <% else %>
                Check back later for new events from this club.
              <% end %>
            </p>
            <% if @club.is_owner?(current_user) %>
              <div class="mt-6">
                <%= link_to "Create New Event", new_club_event_path(@club), class: "inline-flex items-center rounded-md bg-orange-600 px-3 py-2 text-sm font-semibold text-white shadow hover:bg-orange-700" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </section>
    <% end %>
  </div>
</div>
