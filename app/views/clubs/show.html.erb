<% content_for :title, @club.name %>

<div class="w-full">
  <!-- Hero banner with blurred background and overlay -->
  <section class="relative overflow-hidden rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-gray-900">
    <div class="absolute inset-0">
      <img alt="" src="https://picsum.photos/seed/<%= @club.slug %>-hero/1600/500" class="h-full w-full object-cover blur-sm" />
      <div class="absolute inset-0 bg-white/70 dark:bg-gray-900/70"></div>
    </div>

    <div class="relative grid grid-cols-4 mx-auto px-6 py-10 sm:py-14 lg:px-8">
      <div class="items-center col-span-4 mb-4 sm:col-span-3 sm:mb-0">
        <!-- Left: Name + badges -->
          <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl"><%= @club.name %></h1>
          <div class="mt-3 flex flex-wrap items-center gap-2 text-xs">
            <span class="inline-flex items-center rounded-full border border-gray-300 bg-white/80 px-2 py-0.5 text-gray-800 shadow-sm dark:border-gray-600 dark:bg-gray-800/60 dark:text-gray-100"><%= @club.formatted_category %></span>
            <span class="inline-flex items-center rounded-full border border-gray-300 bg-white/80 px-2 py-0.5 text-gray-800 shadow-sm dark:border-gray-600 dark:bg-gray-800/60 dark:text-gray-100"><%= @club.formatted_level %></span>
            <span class="inline-flex items-center rounded-full border border-gray-300 bg-white/80 px-2 py-0.5 text-gray-800 shadow-sm dark:border-gray-600 dark:bg-gray-800/60 dark:text-gray-100"><%= rand(1..999) %> members</span>
          </div>
        <!-- Right: Join button -->
      </div>

      <div class="items-center flex col-span-4 sm:col-span-1 md:justify-end text-center">
        <% if current_user && current_user == @club.owner %>
          <%= link_to "Update my Club", edit_club_path(@club), class: "inline-flex items-center rounded-md bg-amber-600 px-6 py-2 text-lg font-semibold text-white shadow hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2" %>
        <% else %>
          <%= link_to "Join", "#", class: "inline-flex items-center rounded-md bg-orange-600 px-6 py-2.5 text-lg font-semibold text-white shadow hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Content sections without rounded/bordered containers -->
  <div class="mx-auto mt-8">
    <!-- Description (no title) -->
    <section>
      <h2 class="text-2xl font-bold tracking-tight">Description</h2>
      <div class="prose prose-sm max-w-none text-gray-700 dark:prose-invert dark:text-gray-300">
        <%= sanitize(@club.description.html_safe) %>
      </div>
    </section>

    <!-- Rules (with title) -->
    <section class="mt-10 mb-8">
      <h2 class="text-2xl font-bold tracking-tight">Rules</h2>
      <div class="prose prose-sm max-w-none text-gray-700 dark:prose-invert dark:text-gray-300 mt-3">
        <%= sanitize(@club.rules.html_safe) %>
      </div>
    </section>
  </div>
</div>
