<% content_for :title, "Edit club" %>

<div class="min-h-screen py-10">
  <div class="mx-auto w-full max-w-3xl">
    <div class="mb-6 text-center">
      <h1 class="text-3xl font-bold tracking-tight">Edit club</h1>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">Update your club details below and save your changes.</p>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100">
      <%= render "form", club: @club %>
    </div>

    <div class="mt-6">
      <%= link_to "Back to clubs", clubs_path, class: "inline-flex items-center rounded-md border border-gray-300 px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-100 hover:dark:bg-gray-700" %>
    </div>
  </div>
</div>
