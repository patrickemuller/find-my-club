<div class="mx-auto w-full md:mt-8">
  <!-- Page header -->
  <div class="flex grid grid-cols-4 items-center mb-6">
    <div class="col-span-4 lg:col-span-3 mb-4">
      <h1 class="text-3xl font-bold tracking-tight">My Clubs</h1>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">Create and manage your clubs, and see the clubs you are a member of.</p>
    </div>

    <div class="flex col-span-4 lg:col-span-1 lg:justify-end">
      <%= link_to new_club_path, class: "inline-flex items-center rounded-md bg-orange-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" do %>
        <!-- plus icon -->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="mr-2 h-5 w-5">
          <path fill-rule="evenodd" d="M12 3.75a.75.75 0 01.75.75v6.75h6.75a.75.75 0 010 1.5H12.75v6.75a.75.75 0 01-1.5 0V12.75H4.5a.75.75 0 010-1.5h6.75V4.5a.75.75 0 01.75-.75z" clip-rule="evenodd" />
        </svg>
        New Club
      <% end %>
    </div>
  </div>

  <!-- Clubs I own -->
  <section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Clubs I Own</h2>
    <div class="flex grid grid-cols-2 min-w-full gap-4">
      <% if @clubs.present? %>
        <% @clubs.each do |club| %>
        <div class="w-full rounded-2xl col-span-2 md:col-span-1 border border-gray-200 bg-white p-5 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100">
          <div class="flex items-start justify-between gap-4">
            <div>
              <h3 class="text-lg font-semibold"><%= club.disabled? ? "(disabled)" : nil %><%= club.name %></h3>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-300"><%= club.formatted_category %></p>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-300"><%= club.formatted_level %></p>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-300"><%= club.members_count %> <%= 'member'.pluralize(club.members_count) %></p>
            </div>
            <span class="inline-flex items-center rounded-full bg-orange-100 px-2 py-1 text-xs font-medium text-orange-700"><%= club.is_owner?(current_user) ? "Owner" : "Member" %></span>
          </div>

          <div class="mt-4 flex flex-wrap items-center gap-2">
            <% if club.is_owner?(current_user) %>
              <%= link_to "View", club_path(club), class: "inline-flex items-center rounded-md border border-gray-300 px-3 py-1.5 text-sm font-medium text-gray-900 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-100 hover:dark:bg-gray-700" %>
              <%= link_to "Edit", edit_club_path(club), class: "inline-flex items-center rounded-md border border-gray-300 px-3 py-1.5 text-sm font-medium text-gray-900 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-100 hover:dark:bg-gray-700" %>
              <%= link_to "Members", members_club_path(club), class: "inline-flex items-center rounded-md border border-blue-300 bg-blue-50 px-3 py-1.5 text-sm font-medium text-blue-800 hover:bg-blue-500 hover:text-white dark:border-blue-600 dark:bg-blue-900/30 dark:text-blue-300" %>
              <%= link_to "Events", club_events_path(club), class: "inline-flex items-center rounded-md border border-purple-300 bg-purple-50 px-3 py-1.5 text-sm font-medium text-purple-800 hover:bg-purple-500 hover:text-white dark:border-purple-600 dark:bg-purple-900/30 dark:text-purple-300" %>
              <% if club.active %>
                <%= button_to "Disable", disable_club_path(club), method: :patch, data: { turbo_confirm: 'Are you sure you want to disable this club? You can reactivate this club at any moment' }, class: "cursor-pointer inline-flex items-center rounded-md border border-yellow-300 bg-yellow-50 px-3 py-1.5 text-sm font-medium text-yellow-800 hover:bg-yellow-500 hover:text-white dark:border-yellow-600 dark:bg-yellow-900/30 dark:text-yellow-300" %>
              <% else %>
                <%= button_to "Enable", enable_club_path(club), method: :patch, data: { turbo_confirm: 'Are you sure you want to enable this club? You can disable this club at any moment' }, class: "cursor-pointer inline-flex items-center rounded-md border border-green-300 bg-green-50 px-3 py-1.5 text-sm font-medium text-green-800 hover:bg-green-500 hover:text-white dark:border-green-600 dark:bg-green-900/30 dark:text-green-300" %>
              <% end %>
              <%= button_to "Delete", club_path(club), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this club? THIS ACTION CANNOT BE UNDONE' }, class: "cursor-pointer inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700" %>
            <% else %>
              <%= link_to "View", club_path(club), class: "inline-flex items-center rounded-md border border-gray-300 px-3 py-1.5 text-sm font-medium text-gray-900 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-100 hover:dark:bg-gray-700" %>
              <%= link_to "Events", club_events_path(club), class: "inline-flex items-center rounded-md border border-purple-300 bg-purple-50 px-3 py-1.5 text-sm font-medium text-purple-800 hover:bg-purple-500 hover:text-white dark:border-purple-600 dark:bg-purple-900/30 dark:text-purple-300" %>
              <%= button_to "Leave", club_membership_path(club), method: :delete,
                  data: { turbo_confirm: "Are you sure you want to leave #{club.name}? You'll lose access to all club information and events." },
                  class: "cursor-pointer inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700" %>
            <% end %>
          </div>
        </div>
        <% end %>
      <% else %>
        <div class="w-full col-span-2 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100">
          <div class="flex items-start justify-between gap-4">
            <div>
              <h3 class="text-lg font-semibold">You don't own any Clubs. Create your today!</h3>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Clubs I'm a member of -->
  <section class="mb-4">
    <h2 class="text-xl font-semibold mb-4">Clubs I'm a Member Of</h2>
    <div class="flex grid grid-cols-2 min-w-full gap-4">
      <% if @memberships.present? %>
        <% @memberships.each do |club| %>
          <div class="w-full rounded-2xl col-span-2 md:col-span-1 border border-gray-200 bg-white p-5 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100">
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="text-lg font-semibold"><%= club.name %></h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-300"><%= club.formatted_category %></p>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-300"><%= club.formatted_level %></p>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-300"><%= club.members_count %> <%= 'member'.pluralize(club.members_count) %></p>
              </div>
              <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-700 dark:bg-green-900/50 dark:text-green-300">Member</span>
            </div>

            <div class="mt-4 flex flex-wrap items-center gap-2">
              <%= link_to "View", club_path(club), class: "inline-flex items-center rounded-md border border-gray-300 px-3 py-1.5 text-sm font-medium text-gray-900 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-100 hover:dark:bg-gray-700" %>
              <%= link_to "Events", club_events_path(club), class: "inline-flex items-center rounded-md border border-purple-300 bg-purple-50 px-3 py-1.5 text-sm font-medium text-purple-800 hover:bg-purple-500 hover:text-white dark:border-purple-600 dark:bg-purple-900/30 dark:text-purple-300" %>
              <%= button_to "Leave", club_membership_path(club), method: :delete,
                  data: { turbo_confirm: "Are you sure you want to leave #{club.name}? You'll lose access to all club information and events." },
                  class: "cursor-pointer inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700" %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="w-full col-span-2 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100">
          <div class="flex items-start justify-between gap-4">
            <div>
              <h3 class="text-lg font-semibold">You haven't joined any clubs yet</h3>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">Discover clubs and join them to get started!</p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to "Explore Clubs", clubs_path, class: "inline-flex items-center rounded-md bg-orange-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-orange-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
