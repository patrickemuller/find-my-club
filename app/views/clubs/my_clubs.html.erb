<div class="min-h-screen py-10">
  <div class="mx-auto">
    <!-- Page header -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight">My Clubs</h1>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">Create and manage your clubs, and see the clubs you are a member of.</p>
      </div>
      <%= link_to new_club_path, class: "inline-flex items-center rounded-md bg-orange-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" do %>
        <!-- plus icon -->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="mr-2 h-5 w-5">
          <path fill-rule="evenodd" d="M12 3.75a.75.75 0 01.75.75v6.75h6.75a.75.75 0 010 1.5H12.75v6.75a.75.75 0 01-1.5 0V12.75H4.5a.75.75 0 010-1.5h6.75V4.5a.75.75 0 01.75-.75z" clip-rule="evenodd" />
        </svg>
        New Club
      <% end %>
    </div>

    <%# Fake data for demonstration (owner clubs) %>
    <% owner_clubs = [
      { name: "Downtown Runners", members: 37, sport: "Running" },
      { name: "City Cyclists", members: 82, sport: "Cycling" },
      { name: "Lakeside Swimmers", members: 18, sport: "Swimming" }
    ] %>

    <% member_clubs = [
      { name: "Weekend Hikers", members: 54, sport: "Hiking" },
      { name: "Beach Volleyball", members: 26, sport: "Volleyball" },
      { name: "5am Rowing", members: 12, sport: "Rowing" },
      { name: "Community Basketball", members: 33, sport: "Basketball" },
      { name: "City Tri Club", members: 67, sport: "Triathlon" }
    ] %>

    <!-- Clubs I own -->
    <section class="mb-10">
      <div class="mb-3 flex items-center justify-between">
        <h2 class="text-xl font-semibold">Clubs I own</h2>
      </div>

      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% owner_clubs.each do |club| %>
          <div class="rounded-2xl border border-gray-200 bg-white p-5 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100">
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="text-lg font-semibold"><%= club[:name] %></h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-300"><%= club[:sport] %> • <%= club[:members] %> members</p>
              </div>
              <span class="inline-flex items-center rounded-full bg-orange-100 px-2 py-1 text-xs font-medium text-orange-700">Owner</span>
            </div>

            <div class="mt-4 flex flex-wrap items-center gap-2">
              <%= link_to "Edit", '#', class: "inline-flex items-center rounded-md border border-gray-300 px-3 py-1.5 text-sm font-medium text-gray-900 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-100 hover:dark:bg-gray-700" %>
              <%= button_to "Disable", '#', method: :post, class: "cursor-pointer inline-flex items-center rounded-md border border-yellow-300 bg-yellow-50 px-3 py-1.5 text-sm font-medium text-yellow-800 hover:bg-yellow-500 hover:text-white dark:border-yellow-600 dark:bg-yellow-900/30 dark:text-yellow-300" %>
              <%= button_to "Delete", '#', method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this club?' }, class: "cursor-pointer inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700" %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Clubs I am a member of -->
    <section>
      <div class="mb-3 flex items-center justify-between">
        <h2 class="text-xl font-semibold">Clubs I'm a member of</h2>
      </div>

      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% member_clubs.each do |club| %>
          <div class="rounded-2xl border border-gray-200 bg-white p-5 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100">
            <h3 class="text-lg font-semibold"><%= club[:name] %></h3>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-300"><%= club[:sport] %> • <%= club[:members] %> members</p>
            <div class="mt-4 flex items-center gap-2">
              <%= link_to "View", '#', class: "inline-flex items-center rounded-md border border-gray-300 px-3 py-1.5 text-sm font-medium text-gray-900 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-100 hover:dark:bg-gray-700" %>
              <%= button_to "Leave", '#', method: :delete, data: { turbo_confirm: 'Are you sure you want to leave this club?' }, class: "inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700" %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
