<% content_for :title, "Clubs" %>

<div class="w-full">
  <!-- Hero section with blurred random background -->
  <section class="relative overflow-hidden rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-gray-900">
    <div class="absolute inset-0">
      <img alt="" src="https://picsum.photos/seed/<%= (Time.current.to_i + rand(10_000)).to_s %>/1600/500" class="h-full w-full object-cover blur-sm" />
      <div class="absolute inset-0 bg-white/70 dark:bg-gray-900/70"></div>
    </div>
    <div class="relative mx-auto px-6 py-10 sm:py-14 lg:px-8 text-center">
      <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl">Find Clubs</h1>

      <%= form_with url: clubs_path, method: :get, local: true, class: "mt-6 w-full" do %>
        <div class="mx-auto flex max-w-4xl flex-wrap items-center justify-center gap-2">
          <div class="relative min-w-[240px] flex-1">
            <label for="q" class="sr-only">Search clubs</label>
            <span class="pointer-events-none absolute inset-y-0 left-3 inline-flex items-center text-gray-400">ðŸ”Ž</span>
            <input type="text" name="q" id="q" value="<%= params[:q] %>" placeholder="Search by name, sport, level..." class="w-full rounded-md border border-gray-300 bg-white py-2 pl-9 pr-3 text-sm text-gray-900 placeholder-gray-400 shadow-sm focus:border-orange-500 focus:ring-orange-500 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 dark:placeholder-gray-400" />
          </div>

          <div>
            <label for="category" class="sr-only">Category</label>
            <%= select_tag :category, options_for_select(["", "Running", "Cycling", "Swimming", "Football", "Basketball", "Tennis", "Volleyball", "Hiking", "Climbing", "Rowing"], params[:category]),
                           include_blank: false,
                           class: "rounded-md border border-gray-300 bg-white py-2 px-2 text-sm text-gray-900 shadow-sm focus:border-orange-500 focus:ring-orange-500 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100" %>
          </div>

          <div>
            <label for="level" class="sr-only">Level</label>
            <%= select_tag :level, options_for_select(["", "Beginner", "Intermediate", "Advanced", "Expert"], params[:level]),
                           include_blank: false,
                           class: "rounded-md border border-gray-300 bg-white py-2 px-2 text-sm text-gray-900 shadow-sm focus:border-orange-500 focus:ring-orange-500 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100" %>
          </div>

          <div>
            <button type="submit" class="inline-flex items-center rounded-md bg-orange-600 px-4 py-2 text-sm font-medium text-white shadow hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2">
              Search
            </button>
          </div>

          <div>
            <%= link_to "Clear", clubs_path, method: :get, class: "inline-flex items-center rounded-md dark:bg-white bg-white-300 px-4 py-2 text-sm font-medium text-gray-700 shadow hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <div id="clubs" class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3 mb-8">
    <% if @clubs.present? %>
      <div class="col-span-full text-center mt-4">
        <%= paginate @clubs %>
      </div>

      <% @clubs.each do |club| %>
        <%= link_to club_path(club.slug) do %>
          <div class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm hover:shadow-md transition dark:border-gray-700 dark:bg-gray-800">
            <div class="h-28 w-full bg-cover bg-center" style="background-image: url('https://picsum.photos/seed/<%= club.slug %>/400/160');"></div>
            <div class="p-4">
              <div class="flex items-center justify-between gap-2">
                <h3 class="text-lg font-semibold"><%= club.name %></h3>
              </div>
              <div class="mt-1 flex flex-wrap items-center gap-2 text-xs">
                <span class="inline-flex items-center rounded-full border border-gray-300 px-2 py-0.5 text-gray-700 dark:border-gray-600 dark:text-gray-200"><%= club.category %></span>
                <span class="inline-flex items-center rounded-full border border-gray-300 px-2 py-0.5 text-gray-700 dark:border-gray-600 dark:text-gray-200"><%= club.level %></span>
              </div>
              <p class="mt-3 line-clamp-3 text-sm text-gray-700 dark:text-gray-300"><%= truncate(strip_tags(club.description), length: 200) %></p>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="col-span-full text-center mt-4">
        <%= paginate @clubs %>
      </div>
    <% else %>
      <h3 class="col-span-full text-center text-gray-600 dark:text-gray-400">No clubs found. Try a different search.</h3>
    <% end %>
  </div>
</div>
