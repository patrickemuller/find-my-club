<div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
    <%= link_to event.name, club_event_path(event.club, event), class: "hover:text-orange-600" %>
  </h3>

  <div class="mt-2 space-y-1 text-sm text-gray-600 dark:text-gray-300">
    <p><strong>Start:</strong> <%= event.starts_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><strong>End:</strong> <%= event.ends_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><strong>Participants:</strong> <%= event.confirmed_participants_count %>/<%= event.max_participants %></p>
  </div>

  <div class="mt-4">
    <%= link_to "View Details", club_event_path(event.club, event), class: "inline-flex items-center rounded-md bg-orange-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-orange-700" %>
  </div>
</div>
