<div class="min-h-screen py-6 px-4">
  <div class="mx-auto w-full max-w-md">
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold tracking-tight">Create your account</h1>
      <p class="mt-2 text-sm text-gray-600">Join Find My Club</p>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="mt-4 space-y-6">
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1 dark:text-gray-300" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", required: true, class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-gray-900 dark:border-gray-700 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-400" %>
          </div>

          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1 dark:text-gray-300" %>
            <%= f.text_field :last_name, autocomplete: "last-name", required: true, class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-gray-900 dark:border-gray-700 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-400" %>
          </div>

          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1 dark:text-gray-300" %>
            <%= f.email_field :email, autocomplete: "email", required: true, class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-gray-900 dark:border-gray-700 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-400" %>
          </div>

          <div>
            <div class="flex items-baseline justify-between">
              <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1 dark:text-gray-300" %>
              <% if @minimum_password_length %>
                <em class="text-xs text-gray-500 dark:text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", required: true, class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-gray-900 dark:border-gray-700 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-400" %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1 dark:text-gray-300" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 dark:bg-gray-900 dark:border-gray-700 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-400" %>
          </div>

          <div>
            <%= f.submit "Sign up", class: "w-full inline-flex justify-center rounded-md p-2 bg-orange-600 px-4 py-2 font-medium text-white hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
