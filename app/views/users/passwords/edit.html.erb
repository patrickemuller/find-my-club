<div class="min-h-screen py-6 px-4">
  <div class="mx-auto w-full max-w-md">
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold tracking-tight">Change your password</h1>
      <p class="mt-2 text-sm text-gray-600">Set a new password for your account</p>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mt-4 space-y-6">
          <div>
            <div class="flex items-baseline justify-between">
              <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <% if @minimum_password_length %>
                <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
          </div>

          <div>
            <%= f.submit "Change my password", class: "w-full inline-flex justify-center rounded-md p-2 bg-orange-600 px-4 py-2 font-medium text-white hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
