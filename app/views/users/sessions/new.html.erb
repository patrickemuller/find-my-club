<div class="min-h-screen py-12 px-4">
  <div class="mx-auto w-full max-w-md">
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold tracking-tight">Welcome back</h1>
      <p class="mt-2 text-sm text-gray-600">Log in to continue</p>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password, autocomplete: "current-password", class: " block w-full rounded-md p-2 border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-orange-600 focus:ring-orange-500" %>
              <%= f.label :remember_me, class: "text-sm text-gray-700" %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Log in", class: "w-full inline-flex justify-center rounded-md p-2 bg-orange-600 px-4 py-2 font-medium text-white hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
