<nav aria-label="Breadcrumb" class="flex">
  <ol role="list" class="flex items-center space-x-4 overflow-scroll text-center md:text-left">
    <li>
      <div>
        <%= link_to root_path, class: "text-black-400 hover:text-black-500 dark:text-black-500 dark:hover:text-black-300" do %>
          <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 shrink-0">
            <path d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z" clip-rule="evenodd" fill-rule="evenodd" />
          </svg>
          <span class="sr-only">Home</span>
        <% end %>
      </div>
    </li>

    <% if links_and_text.present? %>
      <% links_and_text.each do |link, text| %>
        <li class="">
          <div class="flex items-center">
            <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 shrink-0 text-black-400 dark:text-black-500">
              <path d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
            </svg>
            <%= link_to text, link, class: "ml-4 text-sm font-medium text-black-500 hover:text-black-700 dark:text-black-400 dark:hover:text-black-200" %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ol>
</nav>
